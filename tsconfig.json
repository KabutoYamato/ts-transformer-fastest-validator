{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      { "transform": "./transformer" }
    ]
  },
  "include": [
    "index.ts",
    "transformer.ts",
    "test/json-schema.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
